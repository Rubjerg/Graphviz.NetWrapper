<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net48</TargetFramework>
    <Platforms>x64</Platforms>
    <Authors>Chiel ten Brinke</Authors>
    <Company>Rubjerg</Company>
    <RestorePackagesPath>..\packages</RestorePackagesPath>
  </PropertyGroup>

  <ItemGroup>
      <ProjectReference Include="..\Rubjerg.Graphviz\Rubjerg.Graphviz.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NUnit">
      <Version>3.12.0</Version>
    </PackageReference>
    <PackageReference Include="NUnit.ConsoleRunner">
      <Version>3.11.1</Version>
    </PackageReference>
    <PackageReference Include="NUnit.Extension.TeamCityEventListener">
      <Version>1.0.7</Version>
    </PackageReference>
    <PackageReference Include="OpenCover">
      <Version>4.7.922</Version>
    </PackageReference>
  </ItemGroup>

  <PropertyGroup>
    <PowerShell># 2&gt;nul || type %~df0|find /v "setlocal"|find /v "errorlevel"|powershell.exe -noninteractive -&amp; exit %errorlevel% || #</PowerShell>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <PropertyGroup>
      <GenerateReadme>$(PowerShell)
        Write-Host "Generating README.md"
        Get-Content ../README-src.md | Set-Content ../README.md
        Add-Content ../README.md '```cs'
        Get-Content Tutorial.cs | Add-Content ../README.md
        Add-Content ../README.md '```'
      </GenerateReadme>
    </PropertyGroup>
    <Exec Command="$(GenerateReadme)" EchoOff="true" />
  </Target>

</Project>
